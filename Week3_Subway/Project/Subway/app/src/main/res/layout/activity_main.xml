<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnBread"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="26dp"
        android:layout_toStartOf="@+id/btnVege"
        android:background="@drawable/bread"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnMain"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/btnBread"
        android:layout_marginStart="134dp"
        android:background="@drawable/steak"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnCheese"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/btnBread"
        android:layout_toEndOf="@+id/btnSauce"
        android:background="@drawable/cheese"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnVege"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="-134dp"
        android:layout_marginTop="90dp"
        android:layout_toStartOf="@+id/btnMain"
        android:background="@drawable/vegeicon"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnSauce"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/btnVege"
        android:layout_toEndOf="@+id/btnMain"
        android:background="@drawable/sauce"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnExtra"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/btnVege"
        android:layout_toEndOf="@+id/btnCheese"
        android:background="@drawable/egg"
        android:backgroundTint="@color/green"
        android:text="Extra"
        android:textColor="@color/lightyel"
        android:textStyle="bold" />


    <ImageView
        android:id="@+id/bottom"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="255dp"
        android:src="@drawable/flat_bread_bottom"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/main2"
        android:layout_width="160dp"
        android:layout_height="36dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="243dp"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/main"
        android:layout_width="160dp"
        android:layout_height="36dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="240dp"
        android:visibility="invisible"/>


    <ImageView
        android:id="@+id/cheese"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="232dp"
        android:src="@drawable/american_cheese"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/lettuce"
        android:layout_width="160dp"
        android:layout_height="26dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="235dp"
        android:src="@drawable/lettuce"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/olive"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="235dp"
        android:src="@drawable/olives"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/pepper"
        android:layout_width="160dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="227dp"
        android:src="@drawable/peppers"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/cucumber"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="225dp"
        android:src="@drawable/cucumbers"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/jalapeno"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="215dp"
        android:src="@drawable/jalapenos"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/pickle"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="220dp"
        android:src="@drawable/pickle"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/tomato"
        android:layout_width="160dp"
        android:layout_height="28dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="215dp"
        android:src="@drawable/tomato"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/onion"
        android:layout_width="160dp"
        android:layout_height="28dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="208dp"
        android:src="@drawable/onion"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/top"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:src="@drawable/flat_bread_top"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="330dp"
        android:textSize="20dp" />


    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_above="@+id/navigationView"
        android:layout_alignParentStart="true"
        android:focusable="true"
        android:hint="이름을 짓는다."
        android:inputType="text|textMultiLine"
        android:textCursorDrawable="@null">

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/btnCreate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/editText"
        android:layout_toStartOf="@+id/btnSubmit"
        android:backgroundTint="@color/deepgreen"
        android:text="Create"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/editText"
        android:backgroundTint="@color/deepgreen"
        android:text="Submit"
        android:textColor="@color/lightyel"
        android:textStyle="bold" />


    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/navigation">

        <include layout="@layout/navigation_element" />
    </android.support.design.widget.BottomNavigationView>

</RelativeLayout>